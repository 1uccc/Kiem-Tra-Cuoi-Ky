@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center login-form">
        <h2 class="mb-4">Đăng Ký Tài Khoản</h2>

        @if (!ViewData.ModelState.IsValid)
        {
                <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                            <div>@error.ErrorMessage</div>
                }
                </div>
        }

        <form asp-controller="TaiKhoan" asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label for="tenDangNhap">Tên đăng nhập</label>
                <input type="text" class="form-control" id="tenDangNhap" name="TenDangNhap" required />
            </div>
            <div class="form-group mb-3">
                <label for="matKhau">Mật khẩu</label>
                <input type="password" class="form-control" id="matKhau" name="MatKhau" required />
            </div>
            <div class="form-group mb-3">
                <label for="hoTen">Họ tên</label>
                <input type="text" class="form-control" id="hoTen" name="HoTen" required />
            </div>
            <div class="form-group mb-4">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="Email" required />
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">Đăng Ký</button>
            <p class="mt-3">Đã có tài khoản? <a asp-controller="TaiKhoan" asp-action="Login">Đăng nhập ngay</a></p>
        </form>
    </div>
</div>
