@model QuanLyCongViec.Models.VanBanDi

<h2>Xác Nhận Xóa</h2>
<p>Bạn có chắc chắn muốn xóa văn bản này: <strong>@Model.SoVanBan</strong>?</p>
<dl class="row">
        <dt class="col-sm-2">Số Văn Bản</dt>
        <dd class="col-sm-10">@Model.SoVanBan</dd>
        <dt class="col-sm-2">Ngày Nhận</dt>
        <dd class="col-sm-10">@Model.NgayGui.ToShortDateString()</dd>
        <dt class="col-sm-2">Trích Yếu</dt>
        <dd class="col-sm-10">@Model.TrichYeu</dd>
        <dt class="col-sm-2">Đơn Vị Nhận</dt>
        <dd class="col-sm-10">@Model.DonViNhan</dd>
    </dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.MaVanBanDi" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
